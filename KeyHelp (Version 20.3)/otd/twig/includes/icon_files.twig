{% apply spaceless %}

    {% if _type == 'folder' or _type == 'dir' %}
        {% set class = 'fas fa-folder' %}
    {% elseif _type == 'code' %}
        {% set class = 'fas fa-file-code' %}
        {% set color = 'has-text-info' %}
    {% elseif _type == 'image' %}
        {% set class = 'fas fa-file-image' %}
        {% set color = 'has-text-success' %}
    {% elseif _type == 'audio' %}
        {% set class = 'fas fa-file-audio' %}
        {% set color = 'has-text-success' %}
    {% elseif _type == 'archive' %}
        {% set class = 'fas fa-file-archive' %}
        {% set color = 'has-text-warning' %}
    {% elseif _type == 'pdf' %}
        {% set class = 'fas fa-file-pdf' %}
        {% set color = 'has-text-danger' %}
    {% elseif _type == 'text' %}
        {% set class = 'fas fa-file-alt' %}
        {% set color = 'has-text-grey' %}
    {% elseif _type == 'video' %}
        {% set class = 'fas fa-file-video' %}
        {% set color = 'has-text-success' %}
    {% elseif _type == 'link' %}
        {% set class = 'fas fa-link' %}
        {% set color = 'has-text-grey' %}
    {% elseif _type == 'folder_up' %}
        {% set class = 'fas fa-level-up-alt' %}
    {% else %}
        {% set class = 'fas fa-file' %}
        {% set color = 'has-text-grey' %}
    {% endif %}

    <span class="icon is-medium {{ color }}">
        <i class="{{ class }} fa-lg"></i>
    </span>

{% endapply %}