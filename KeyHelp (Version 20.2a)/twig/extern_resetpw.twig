{% extends 'base/extern.twig' %}



{% block content %}
    {% import "macros/macros.twig" as macros %}
    {% import "macros/forms.twig" as forms %}

    <p class="has-text-centered has-margin-bottom-medium">
        {{ reset_password_help }}
	</p>

    <form action="?page=forgotpw" method="post">
        <input type="hidden" name="submit" value="1">
        <input type="hidden" name="request_id" value="{{ _request_id }}">
        <input type="hidden" name="token" value="{{ _token }}">

        {% include 'includes/form_password.twig' with { '_is_hide_asterisk': true } %}

        <div class="has-margin-bottom-large"></div>

        {{ forms.button({
            'label': save,
            'style': 'primary',
            'class': 'is-fullwidth'
        }) }}
    </form>

    <p class="has-text-centered has-text-link has-margin-top-medium">
        <a href="index.php">{{ back_to_login }}</a>
    </p>

{% endblock %}

