<div class="card {{ _has_margin_top ? 'has-margin-top-large' }} {{ _has_equal_height ? 'has-equal-height' }} {{ _additional_classes ? _additional_classes }}">
    <div class="card-header {{ _is_collapsible ? 'is-collapsible' }}" {% if _cookie_name %}data-name="{{ _cookie_name }}"{% endif %}>
        {% if _icon %}
            <div class="card-header-icon">
                <span class="icon is-medium">
                    <i class="{{ _icon }} fa-lg"></i>
                </span>
            </div>
        {%  endif %}
        <div class="card-header-title equal-height">
            {{ _label }}
        </div>
        {% if _is_collapsible %}
            <div class="card-header-icon">
                <span class="icon is-medium has-text-grey-light app-collapse-indicator">
                    <i class="fas fa-angle-down"></i>
                </span>
            </div>
        {% endif %}
    </div>
